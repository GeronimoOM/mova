    "version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "attach",
			"name": "Debug (docker-compose up)",
			"address": "localhost",
			"port": 9001,
			"restart": true,
			"localRoot": "${workspaceRoot}/api",
			"remoteRoot": "/app",
			"skipFiles": ["<node_internals>/**/*.js"],
		},
		{
			"name": "Launch Chrome",
			"request": "launch",
			"type": "chrome",
			"url": "http://localhost:9005",
			"webRoot": "${workspaceFolder}/client"
		},
	]
}