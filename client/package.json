{
  "name": "mova-client",
  "version": "1.0.0",
  "description": "Mova App Client",
  "author": "GeronimoOM",
  "license": "UNLICENSED",
  "scripts": {
    "build": "vite build",
    "build:dev": "vite build --watch",
    "start": "vite",
    "start:prod": "serve -l 4000 -s dist",
    "format": "prettier --write .",
    "lint": "eslint --fix .",
    "type-check": "tsc --noEmit",
    "test": "cypress run --e2e",
    "test:open": "cypress open --e2e",
    "lint-staged": "lint-staged",
    "graphql:codegen": "graphql-codegen -c ./src/api/codegen.ts",
    "pwa:assets-gen": "pwa-assets-generator --preset minimal-2023 public/images/logo.svg"
  },
  "dependencies": {
    "@apollo/client": "3.13.1",
    "@vanilla-extract/css": "1.17.1",
    "@vanilla-extract/recipes": "0.5.5",
    "classnames": "2.5.1",
    "country-flag-icons": "1.5.18",
    "dexie": "4.0.11",
    "i18next": "24.2.2",
    "i18next-http-backend": "3.0.2",
    "luxon": "3.5.0",
    "react": "19.0.0",
    "react-dnd": "16.0.1",
    "react-dnd-html5-backend": "16.0.1",
    "react-dom": "19.0.0",
    "react-i18next": "15.4.1",
    "react-icons": "5.5.0",
    "react-minimal-pie-chart": "9.1.0",
    "react-router-dom": "7.2.0",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "9.20.0",
    "@graphql-codegen/cli": "5.0.5",
    "@graphql-codegen/client-preset": "4.6.3",
    "@graphql-typed-document-node/core": "3.2.0",
    "@types/luxon": "3.4.2",
    "@types/node": "22.14.1",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@types/uuid": "10.0.0",
    "@types/yamljs": "0.2.34",
    "@vanilla-extract/vite-plugin": "5.0.1",
    "@vite-pwa/assets-generator": "0.2.6",
    "@vitejs/plugin-react": "4.3.4",
    "cypress": "14.3.1",
    "eslint": "9.20.1",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-hooks": "5.1.0",
    "globals": "15.15.0",
    "graphql": "16.10.0",
    "graphql-request": "7.1.2",
    "lint-staged": "15.4.3",
    "prettier": "3.5.1",
    "prettier-plugin-organize-imports": "4.1.0",
    "typescript": "5.7.3",
    "typescript-eslint": "8.24.1",
    "vite": "6.1.1",
    "vite-plugin-pwa": "0.21.1",
    "workbox-core": "7.3.0",
    "workbox-precaching": "7.3.0",
    "workbox-routing": "7.3.0",
    "yamljs": "0.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{html,graphql}": [
      "prettier --write"
    ]
  }
}
